<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiSample9.NumberPadPage"
             Title="Number Pad">
	<ContentPage.Resources>
		<ResourceDictionary>
			<Style TargetType="Button">
				<Setter Property="WidthRequest" Value="56" />
				<Setter Property="HeightRequest" Value="56" />
				<Setter Property="CornerRadius" Value="28" />
				<Setter Property="HorizontalOptions" Value="Center" />
				<Setter Property="VerticalOptions" Value="Center" />
			</Style>
		</ResourceDictionary>
	</ContentPage.Resources>
	<VerticalStackLayout Padding="20" Spacing="12">
		<Label Text="Number Pad (drag finger to highlight)"
		       FontSize="20" />
		<Border Stroke="{AppThemeBinding Light=Black, Dark=White}" StrokeThickness="1" HorizontalOptions="Fill" VerticalOptions="FillAndExpand" Padding="8">
			<Grid RowSpacing="8" ColumnSpacing="8"
			      HorizontalOptions="FillAndExpand"
			      VerticalOptions="FillAndExpand">
				<Grid.RowDefinitions>
					<RowDefinition Height="*" />
					<RowDefinition Height="*" />
					<RowDefinition Height="*" />
					<RowDefinition Height="*" />
					<RowDefinition Height="*" />
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="*" />
				</Grid.ColumnDefinitions>

				<Button Text="1" Grid.Row="0" Grid.Column="0" />
				<Button Text="2" Grid.Row="0" Grid.Column="1" />
				<Button Text="3" Grid.Row="0" Grid.Column="2" />
				<Button Text="4" Grid.Row="0" Grid.Column="3" />
				<Button Text="5" Grid.Row="0" Grid.Column="4" />

				<Button Text="6" Grid.Row="1" Grid.Column="0" />
				<Button Text="7" Grid.Row="1" Grid.Column="1" />
				<Button Text="8" Grid.Row="1" Grid.Column="2" />
				<Button Text="9" Grid.Row="1" Grid.Column="3" />
				<Button Text="10" Grid.Row="1" Grid.Column="4" />

				<Button Text="11" Grid.Row="2" Grid.Column="0" />
				<Button Text="12" Grid.Row="2" Grid.Column="1" />
				<Button Text="13" Grid.Row="2" Grid.Column="2" />
				<Button Text="14" Grid.Row="2" Grid.Column="3" />
				<Button Text="15" Grid.Row="2" Grid.Column="4" />

				<Button Text="16" Grid.Row="3" Grid.Column="0" />
				<Button Text="17" Grid.Row="3" Grid.Column="1" />
				<Button Text="18" Grid.Row="3" Grid.Column="2" />
				<Button Text="19" Grid.Row="3" Grid.Column="3" />
				<Button Text="20" Grid.Row="3" Grid.Column="4" />

				<Button Text="21" Grid.Row="4" Grid.Column="0" />
				<Button Text="22" Grid.Row="4" Grid.Column="1" />
				<Button Text="23" Grid.Row="4" Grid.Column="2" />
				<Button Text="24" Grid.Row="4" Grid.Column="3" />
				<Button Text="25" Grid.Row="4" Grid.Column="4" />
			</Grid>
		</Border>
	</VerticalStackLayout>
</ContentPage>

