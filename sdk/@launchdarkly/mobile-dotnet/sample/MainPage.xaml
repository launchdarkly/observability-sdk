<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MauiSample9"
             x:Class="MauiSample9.MainPage"
             Background="Black">

	<ScrollView>
		<VerticalStackLayout Padding="16" Spacing="8">

			<!-- Masking -->
			<Label Text="Masking" FontSize="22" FontAttributes="Bold" TextColor="White" />
			<BoxView HeightRequest="1" Color="Gray" Margin="0,0,0,8" />

			<CollectionView SelectionMode="Single" SelectionChanged="OnMenuSelectionChanged">
				<CollectionView.ItemsSource>
					<x:Array Type="{x:Type x:String}">
						<x:String>Credit Card</x:String>
						<x:String>Number Pad</x:String>
					</x:Array>
				</CollectionView.ItemsSource>
				<CollectionView.ItemTemplate>
					<DataTemplate x:DataType="x:String">
						<Grid Padding="8,12">
							<Label Text="{Binding .}" FontSize="18" TextColor="{StaticResource White}" />
						</Grid>
					</DataTemplate>
				</CollectionView.ItemTemplate>
			</CollectionView>

			<!-- Observability -->
			<Label Text="Observability" FontSize="22" FontAttributes="Bold" TextColor="White" Margin="0,16,0,0" />
			<BoxView HeightRequest="1" Color="Gray" Margin="0,0,0,8" />

			<!-- Session Replay Toggle -->
			<Grid ColumnDefinitions="*,Auto" Padding="0,8">
				<Label Text="Session Replay" FontSize="18" FontAttributes="Bold" TextColor="White"
				       VerticalOptions="Center" Grid.Column="0" />
				<Switch x:Name="SessionReplaySwitch" IsToggled="True"
				        Toggled="OnSessionReplayToggled" Grid.Column="1" />
			</Grid>

			<!-- Identify -->
			<Label Text="Identify" FontSize="18" FontAttributes="Bold" TextColor="White" Margin="0,8,0,4" />
			<FlexLayout Direction="Row" Wrap="Wrap" JustifyContent="Start" AlignItems="Center">
				<Button Text="User" Clicked="OnIdentifyUserClicked"
				        BackgroundColor="#E8DEF8" TextColor="#1D192B" Margin="0,0,8,8" />
				<Button Text="Multi" Clicked="OnIdentifyMultiClicked"
				        BackgroundColor="#E8DEF8" TextColor="#1D192B" Margin="0,0,8,8" />
				<Button Text="Anon" Clicked="OnIdentifyAnonClicked"
				        BackgroundColor="#E8DEF8" TextColor="#1D192B" Margin="0,0,8,8" />
			</FlexLayout>

			<!-- Instrumentation -->
			<Label Text="Instrumentation" FontSize="18" FontAttributes="Bold" TextColor="White" Margin="0,8,0,4" />
			<VerticalStackLayout Spacing="4">
				<Button Text="Trigger HTTP Request" Clicked="OnTriggerHttpRequestClicked" />
				<Button Text="Trigger Crash" Clicked="OnTriggerCrashClicked"
				        BackgroundColor="#F2B8B5" TextColor="White" />
			</VerticalStackLayout>

			<!-- Metric -->
			<Label Text="Metric" FontSize="18" FontAttributes="Bold" TextColor="White" Margin="0,8,0,4" />
			<FlexLayout Direction="Row" Wrap="Wrap" JustifyContent="Start" AlignItems="Center">
				<Button Text="Metric" Clicked="OnMetricClicked" Margin="0,0,8,8" />
				<Button Text="Histogram" Clicked="OnHistogramClicked" Margin="0,0,8,8" />
				<Button Text="Count" Clicked="OnCountClicked" Margin="0,0,8,8" />
				<Button Text="Incremental" Clicked="OnIncrementalClicked" Margin="0,0,8,8" />
				<Button Text="UpDownCounter" Clicked="OnUpDownCounterClicked" Margin="0,0,8,8" />
			</FlexLayout>

			<!-- Customer API -->
			<Label Text="Customer API" FontSize="18" FontAttributes="Bold" TextColor="White" Margin="0,8,0,4" />

			<Button Text="Trigger Error" Clicked="OnTriggerErrorClicked"
			        BackgroundColor="#F2B8B5" TextColor="White" />
			<Button Text="Trigger Log" Clicked="OnTriggerLogClicked" />

			<Entry x:Name="CustomLogEntry" Placeholder="Log Message" TextColor="White"
			       PlaceholderColor="Gray" Margin="0,8" />
			<Button Text="Send custom log" Clicked="OnSendCustomLogClicked" />

			<Button Text="Trigger Nested Spans" Clicked="OnTriggerNestedSpansClicked" Margin="0,16,0,0" />

			<Entry x:Name="CustomSpanEntry" Placeholder="Span Name" TextColor="White"
			       PlaceholderColor="Gray" Margin="0,8" />
			<Button Text="Send custom span" Clicked="OnSendCustomSpanClicked" />

			<Entry x:Name="FlagKeyEntry" Placeholder="Flag key" Text="my-feature" TextColor="White"
			       PlaceholderColor="Gray" Margin="0,16,0,8" />
			<Button Text="Evaluate boolean flag" Clicked="OnEvaluateFlagClicked" />

		</VerticalStackLayout>
	</ScrollView>
</ContentPage>
