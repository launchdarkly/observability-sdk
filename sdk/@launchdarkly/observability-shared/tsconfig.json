{
	"compilerOptions": {
		"declaration": true,
		"declarationMap": true,
		"emitDeclarationOnly": false,
		"module": "esnext",
		"moduleResolution": "node",
		"preserveSymlinks": false,
		"esModuleInterop": true,
		"target": "ES2020",
		"skipLibCheck": true,
		"resolveJsonModule": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
