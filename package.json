{
	"name": "@launchdarkly/observability-sdk",
	"private": true,
	"version": "0.0.0",
	"author": "@launchdarkly",
	"workspaces": [
		"e2e/*",
		"@highlight-run/rrweb",
		"rrweb/packages/*",
		"rrweb/packages/plugins/*",
		"sdk/*"
	],
	"scripts": {
		"build": "yarn turbo run build --filter '!@highlight-run/rrweb-web-extension'",
		"e2e:cloudflare": "yarn turbo run dev --filter cloudflare-worker...",
		"e2e:express": "yarn turbo run dev --filter express...",
		"e2e:nestjs": "yarn turbo run dev --filter nestjs",
		"e2e:nextjs": "yarn turbo run dev --filter nextjs...",
		"e2e:remix": "yarn turbo run dev --filter remix...",
		"enforce-size": "yarn turbo run enforce-size --filter highlight.run...",
		"format-check": "prettier --check --ignore-unknown .",
		"format:all": "prettier --write --ignore-unknown .",
		"lint": "yarn run turbo lint --filter=!@highlight-run/rrweb --filter=!@highlight-run/rrvideo --filter=!@highlight-run/rrweb-rrweb-plugin-console-record --filter=!@highlight-run/rrweb-_monorepo --filter=!@highlight-run/rrweb-all --filter=!@highlight-run/rrweb-record --filter=!@highlight-run/rrweb-replay --filter=!@highlight-run/rrweb-types --filter=!@highlight-run/rrweb-packer --filter=!@highlight-run/rrweb-utils --filter=!@highlight-run/rrweb-web-extension --filter=!@highlight-run/rrweb-snapshot --filter=!@highlight-run/rrweb-player --filter=!@highlight-run/rrdom --filter=!@highlight-run/rrdom-nodejs --filter=!e2e-react-native",
		"prepare": "husky",
		"preinstall": "git submodule update --init --recursive || true",
		"publish": "yarn workspaces foreach -R --no-private --from '@highlight-run/*' npm publish --access public --tolerate-republish --provenance",
		"publish:highlight": "yarn workspaces foreach -R --no-private --from '@highlight-run/*' npm publish --access public --tolerate-republish --provenance && yarn workspace highlight.run npm publish --access public --tolerate-republish --provenance",
		"test": "yarn turbo run test --filter=!@highlight-run/rrweb --filter=!@highlight-run/rrvideo --filter=!@highlight-run/rrweb-rrweb-plugin-console-record --filter=!@highlight-run/rrweb-_monorepo --filter=!@highlight-run/rrweb-all --filter=!@highlight-run/rrweb-record --filter=!@highlight-run/rrweb-replay --filter=!@highlight-run/rrweb-types --filter=!@highlight-run/rrweb-packer --filter=!@highlight-run/rrweb-utils --filter=!@highlight-run/rrweb-web-extension --filter=!@highlight-run/rrweb-snapshot --filter=!@highlight-run/rrweb-player --filter=!@highlight-run/rrdom --filter=!@highlight-run/rrdom-nodejs --filter=!@highlight-run/nextjs"
	},
	"devDependencies": {
		"@changesets/cli": "^2.28.1",
		"@types/node": "^22.14.0",
		"husky": "^9.1.7",
		"prettier": "^3.5.3",
		"pretty-quick": "^4.1.1",
		"turbo": "^2.5.0",
		"typescript": "^5.8.3"
	},
	"resolutions": {
		"ansi-color@^0.2.1": "patch:ansi-color@npm%3A0.2.1#./.yarn/patches/ansi-color-npm-0.2.1-f7243d10a4.patch"
	},
	"packageManager": "yarn@4.9.1"
}
