{
	"name": "@launchdarkly/observability-sdk",
	"private": true,
	"version": "0.0.0",
	"author": "@launchdarkly",
	"workspaces": [
		"rrweb",
		"rrweb/packages/*",
		"rrweb/packages/plugins/*",
		"sdk/*",
		"sdk/@launchdarkly/*"
	],
	"scripts": {
		"build": "yarn turbo run build --filter '!@rrweb/web-extension'",
		"docs": "yarn turbo run docs",
		"enforce-size": "yarn turbo run enforce-size --filter highlight.run...",
		"format-check": "prettier --check --ignore-unknown .",
		"format:all": "prettier --write --ignore-unknown .",
		"lint": "yarn run turbo lint --filter=!rrweb --filter=!rrvideo --filter=!@rrweb/rrweb-plugin-console-record --filter=!@rrweb/_monorepo --filter=!@rrweb/all --filter=!@rrweb/record --filter=!@rrweb/replay --filter=!@rrweb/types --filter=!@rrweb/packer --filter=!@rrweb/utils --filter=!@rrweb/web-extension --filter=!rrweb-snapshot --filter=!rrweb-player --filter=!rrdom --filter=!rrdom-nodejs",
		"prepare": "husky",
		"preinstall": "git submodule update --init --recursive || true",
		"publish": "yarn workspaces foreach -A --include '@launchdarkly/*' --exclude '@launchdarkly/observability-sdk' --exclude '@launchdarkly/observability-shared' npm publish --access public --tolerate-republish --provenance",
		"publish:highlight": "yarn workspaces foreach -A --include '@highlight-run/*' --include 'highlight.run' npm publish --access public --tolerate-republish --provenance",
		"test": "yarn turbo run test --filter=!rrweb --filter=!rrvideo --filter=!@rrweb/rrweb-plugin-console-record --filter=!@rrweb/_monorepo --filter=!@rrweb/all --filter=!@rrweb/record --filter=!@rrweb/replay --filter=!@rrweb/types --filter=!@rrweb/packer --filter=!@rrweb/utils --filter=!@rrweb/web-extension --filter=!rrweb-snapshot --filter=!rrweb-player --filter=!rrdom --filter=!rrdom-nodejs"
	},
	"devDependencies": {
		"@changesets/cli": "^2.28.1",
		"@types/node": "^22.14.0",
		"husky": "^9.1.7",
		"prettier": "^3.5.3",
		"pretty-quick": "^4.1.1",
		"turbo": "^2.5.0",
		"typescript": "^5.8.3"
	},
	"resolutions": {
		"ansi-color@^0.2.1": "patch:ansi-color@npm%3A0.2.1#./.yarn/patches/ansi-color-npm-0.2.1-f7243d10a4.patch"
	},
	"packageManager": "yarn@4.9.1"
}
